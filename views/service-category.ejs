<%- include('./components/head', { title: 'Service - ' + category }) %>
<body class="bg-[var(--dark-violet)] text-[var(--text-color)] flex flex-col min-h-screen">
  <%- include('./components/header') %>

  <main class="flex-grow flex flex-col items-center justify-start text-center p-6">
    <h2 class="text-4xl font-bold text-[var(--accent)]">Catégorie: <%= category %></h2>

    <!-- Liste des Produits -->
    <div class="w-full max-w-3xl mx-auto">
      <h1 class="text-3xl font-bold text-center mb-6 text-white">Liste des Produits</h1>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <% products.forEach(product => { %>
          <div class="bg-light-violet-300 text-white p-6 rounded-2xl shadow-lg border border-violet-700">
            <h2 class="text-xl font-semibold mb-2"><%= product.name %></h2>
            <p class="text-gray-300 mb-2"><%- product.description.replace(/\n/g, '<br>') %></p>
            <p class="text-lg font-bold">Prix : <%= product.price %>€</p>
            
            <!-- Formulaire d'achat -->
            <form action="/buy-product/<%= product.id %>" method="POST">
              <input type="hidden" name="product_id" value="<%= product.id %>" />
              <button type="submit" class="bg-[var(--accent)] text-[var(--text-color)] px-4 py-2 rounded-lg mt-4 inline-block">
                Commander
              </button>
            </form>
          </div>
        <% }); %>
      </div>
    </div>
  </main>

  <%- include('./components/footer') %>
</body>