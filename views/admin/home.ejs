<%- include('../components/head', { title: 'Admin Home' }) %>
  <body
    class="bg-[var(--dark-violet)] text-[var(--text-color)] flex flex-col min-h-screen"
  >

  <%- include('../components/header', { admin: true }) %>

    <main
      class="flex-grow flex flex-col items-center justify-start text-center p-6"
    >
      <h2 class="text-4xl font-bold text-[var(--accent)]">
        Welcome, <%= user.username %>!
      </h2>
      <br />
      <p class="text-lg max-w-2xl">
        You are connected to the
        <span class="text-[var(--accent)]">Administrator</span> panel.
      </p>
      <br />
      <div class="bg-[var(--light-violet)] p-6 rounded-lg shadow-md">
        <h3 class="text-2xl font-bold text-[var(--accent)]">Total Users</h3>
        <p class="text-xl mt-2">
          There are
          <span class="text-[var(--accent)]"><%= totalUsers %></span> registered
          users.
        </p>
      </div>
    </main>

<%- include('../components/footer') %>
